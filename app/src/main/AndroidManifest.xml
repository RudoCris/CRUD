<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pro.rudo.crud.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".SpeleoTools"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:icon="@android:color/transparent"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewMap"
            android:icon="@android:color/transparent"
            android:label="@string/title_activity_new_map" >
        </activity>
        <activity
            android:name=".PicketActivity"
            android:label="@string/title_activity_picket" >
        </activity>
        <activity
            android:name=".EditPrefencesActivity"
            android:label="@string/title_activity_edit_prefences" >
        </activity>
        <activity
            android:name=".ShowCave"
            android:label="@string/title_activity_show_cave"
            android:icon="@android:color/transparent">
        </activity>
    </application>

</manifest>
